{
  "version": "1.0.0",
  "name": "api-problem",
  "description": "HTTP Problem Utility",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "homepage": "https://github.com/ahmadnassri/api-problem",
  "repository": "ahmadnassri/api-problem",
  "license": "ISC",
  "main": "lib/index",
  "keywords": [
    "api",
    "http",
    "problem"
  ],
  "engines": {
    "node": ">=0.10"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "files": [
    "lib",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/ahmadnassri/api-problem/issues"
  },
  "scripts": {
    "compile": "babel src --out-dir lib",
    "test": "babel-node test | tap-spec",
    "pretest": "standard && echint --verbose && npm run compile",
    "coverage": "babel-node ./node_modules/.bin/babel-istanbul cover --dir coverage tape test | tap-dot",
    "precoverage": "npm run compile",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "precodeclimate": "npm run coverage",
    "prepublish": "npm run compile"
  },
  "standard": {
    "ignore": [
      "lib/**"
    ]
  },
  "echint": {
    "ignore": [
      "lib/**",
      "coverage/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-istanbul": "^0.6.0",
    "babel-preset-es2015": "^6.3.13",
    "codeclimate-test-reporter": "^0.1.1",
    "echint": "^1.5.0",
    "standard": "^5.4.1",
    "tap-dot": "^1.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.4.0"
  }
}
